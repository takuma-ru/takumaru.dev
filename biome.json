{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": [
			"node_modules/*",
			"build/*",
			"app/entry.client.tsx",
			"app/entry.server.tsx",
			".wrangler/*"
		]
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"node_modules/*",
			"build/*",
			"app/entry.client.tsx",
			"app/entry.server.tsx",
			".wrangler/*"
		],
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessTypeConstraint": "error",
				"useArrowFunction": "warn"
			}
		}
	}
}
